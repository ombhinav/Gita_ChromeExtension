{
  "manifest_version": 3,
  "name": "Gita Gems",
  "version": "1.0",
  "description": "Discover wisdom from the Bhagavad Gita with every new tab. Gita Gems offers inspiring Sanskrit verses and their translations to bring clarity and peace to your day.",
  "chrome_url_overrides": {
    "newtab": "popup.html"
  },
  "permissions": [
    "storage",
    "history"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "feather.png",
      "32": "feather.png",
      "48": "feather.png",
      "128": "feather.png"
    }
  },
  "icons": {
    "16": "feather.png",
    "32": "feather.png",
    "48": "feather.png",
    "128": "feather.png"
  }
}
